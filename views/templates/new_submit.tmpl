{% extends "base.tmpl" %}
{% block title %}Submit New{% endblock %}
{% block content %}
<div class="container-fluid">
	<form role="form">
		<div class="form-group">
			<label for="title">Title:</label>
			<input type="text" class="form-control" id="title" placeholder="Enter title">
		</div>
		<div class="form-group">
			<label for="description">Description:</label>
			<input type="text" class="form-control" id="description" placeholder="Enter witty comment here">
		</div>
		<div class="form-group">
			<label for="content">Content:</label>
			<textarea class="form-control" rows="10" id="content" placeholder="Enter actual content here. Or not. I don't care, I'm just a text input"></textarea>
		</div>
	</form>
</div>
{% endblock %}
